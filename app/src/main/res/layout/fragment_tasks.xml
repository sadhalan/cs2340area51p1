<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.todolist.ToDoListFragment">


    <EditText
        android:id="@+id/editItem2"
        android:layout_width="214dp"
        android:layout_height="56dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="124dp"
        android:cursorVisible="true"
        android:ems="10"
        android:inputType="text"
        android:maxLines="2"
        android:text="@string/button_task_sample_input"
        android:textColor="@color/grayInputText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editItemExam"
        android:layout_width="218dp"
        android:layout_height="54dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="56dp"
        android:cursorVisible="true"
        android:ems="10"
        android:inputType="text"
        android:text="@string/button_exam_sample_input"
        android:textColor="@color/grayInputText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editItem2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="124dp"
        android:backgroundTint="@color/brightPink"
        android:text="@string/button_task"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editItem2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="350dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/toDoListView"
            android:layout_width="match_parent"
            android:layout_height="437dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
